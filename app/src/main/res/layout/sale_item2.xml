<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/sale_twoiv"
            android:layout_width="match_parent"
            android:layout_height="195dip"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:src="@mipmap/defult_onepic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/sale_twoiv"
            android:gravity="center_vertical"
            android:background="@android:color/black"
            android:alpha="0.5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sale_twotv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="名字"/>
                <TextView
                    android:id="@+id/sale_twotv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/sale_twotv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="类型、面积"/>
        </LinearLayout>
        <TextView
            android:id="@+id/sale_twotv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/sale_twoiv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:text="价格"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="25dp"
            android:src="@mipmap/newhouse_free"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sale_yuanrl"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/list_divider_light"
        android:visibility="gone"
        android:gravity="center">
        <ImageView
            android:id="@+id/sale_yuan2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/entrust_type_unchecked"/>
    </RelativeLayout>
</LinearLayout>