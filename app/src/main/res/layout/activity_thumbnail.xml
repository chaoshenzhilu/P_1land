<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="10dp">
    <ImageView
        android:id="@+id/thumbnail_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@mipmap/list_icon"/>
    <LinearLayout
        android:id="@+id/thumbnail_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <fragment
            android:id="@+id/thumbnail_fragment"
            android:name="com.bwf.p_1land.ui.sale.fragment.FragmentHouseOne04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Gallery
            android:id="@+id/thumbnail_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spacing="15dp"
            android:layout_marginTop="50dp">
        </Gallery>
    </LinearLayout>
    <ScrollView
        android:id="@+id/thumbnail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail_iv"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/thumbnail_sll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

        </LinearLayout>
    </ScrollView>
</RelativeLayout>