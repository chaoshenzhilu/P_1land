<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/white">
    <include layout="@layout/titleinclude"/>
    <View
        android:id="@+id/online_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/online_title"
        android:background="#dadada"
        />
    <LinearLayout
        android:id="@+id/online_ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/online_view"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/online_rlquyu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/online_quyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/filter_down"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:text="区域"/>
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />
        <RelativeLayout
            android:id="@+id/online_rljiage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/online_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/filter_down"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:text="价格"/>
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />
        <RelativeLayout
            android:id="@+id/online_rljushi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/online_jushi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/filter_down"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:text="居室"/>
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />
        <RelativeLayout
            android:id="@+id/online_rlleixing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/online_leixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/filter_down"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:text="类型"/>
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />
        <RelativeLayout
            android:id="@+id/online_rlmore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/online_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/filter_down"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:text="更多"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/online_ll"
        android:background="#dadada" />
    <com.bwf.p_1land.view.RefreshListView
        android:id="@+id/sale_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:divider="@null"
        android:layout_below="@+id/online_ll"/>
    <LinearLayout
        android:id="@+id/sale_fail_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/online_ll"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/map_fail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:text="暂无数据"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/compare_addll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/online_add_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@mipmap/compare_add_btn"/>
        <ImageView
            android:id="@+id/online_compare_btn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@mipmap/compare_btn"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/compare_rl"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/house_compare_count"/>
        <TextView
            android:id="@+id/compare_yuanyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="1"/>
    </RelativeLayout>
</RelativeLayout>