<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/map_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2C0043"
        android:padding="2dp">
        <EditText
            android:id="@+id/map_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="10dp"
            android:background="@drawable/research_et"
            android:textColorHint="@color/calendar_day"
            android:hint="请输入楼盘或商圈名字..."/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/map_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/map_title"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/map_rlquyu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/grid_border"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/map_quyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/filter_down"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:drawablePadding="5dp"
                android:text="区域"/>
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />
        <RelativeLayout
            android:id="@+id/map_rljiage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/grid_border"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/map_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/filter_down"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:drawablePadding="5dp"
                android:text="价格"/>
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />
        <RelativeLayout
            android:id="@+id/map_rltype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/grid_border"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/map_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/filter_down"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:drawablePadding="5dp"
                android:text="房型"/>
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />
        <RelativeLayout
            android:id="@+id/map_rlmore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/grid_border"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/map_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/filter_down"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:drawablePadding="5dp"
                android:text="更多"/>
        </RelativeLayout>
    </LinearLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/map_ll"
        android:clickable="true" />

</RelativeLayout>