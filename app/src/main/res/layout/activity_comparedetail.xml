<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4E3">
    <LinearLayout
        android:id="@+id/compare_nametitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dip"
            android:layout_height="80dip"
            android:gravity="center"
            android:background="@drawable/comparshape"
            android:textColor="@android:color/black"
            android:text="楼盘名:"/>
        <com.bwf.p_1land.view.MyHorizontalScrollView
            android:id="@+id/compare_hscrollViewName"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:scrollbars="none"
            android:fadingEdge="none" >
            <LinearLayout
                android:id="@+id/compare_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>
        </com.bwf.p_1land.view.MyHorizontalScrollView>
    </LinearLayout>
    <ScrollView
        android:id="@+id/compare_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/compare_nametitle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <include layout="@layout/compareleft"/>
            <com.bwf.p_1land.view.MyHorizontalScrollView
                android:id="@+id/compare_hscrollView_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none">
                <LinearLayout
                    android:id="@+id/compare_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                </LinearLayout>
            </com.bwf.p_1land.view.MyHorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>