<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fragment03_tvname"
            style="@style/MyTextView1"
            android:layout_weight="1"
            android:text="名字"/>
        <TextView
            android:id="@+id/fragment03_tvprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:text="价格"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fragment03_tvhuxing"
            style="@style/MyTextView2"
            android:layout_weight="1"
            android:text="4室3厅3卫"/>
        <TextView
            android:id="@+id/fragment03_tvdanjiao"
            style="@style/MyTextView2"
            android:layout_weight="1"
            android:text="5-6万/㎡"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fragment03_tvarea1"
            style="@style/MyTextView2"
            android:layout_weight="1"
            android:text="建筑面积:   "/>
        <TextView
            android:id="@+id/fragment03_tvarea2"
            style="@style/MyTextView2"
            android:layout_weight="1"
            android:text="套内面积:   "/>
    </LinearLayout>
    <TextView
        android:id="@+id/fragment03_tvnumber"
        style="@style/MyTextView2"
        android:layout_marginTop="10dp"
        android:text="房源编号:   "/>
    <TextView
        android:id="@+id/fragment03_tvaddress"
        style="@style/MyTextView2"
        android:layout_marginTop="10dp"
        android:text="地址:   "/>
</LinearLayout>