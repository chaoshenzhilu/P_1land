<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/compare_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_color">
        <ImageView
            android:id="@+id/online_compare_ivback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/arrow_left"/>
        <TextView
            android:id="@+id/online_compare_name"
            style="@style/MyTextView"
            android:layout_centerInParent="true"
            android:text="标题"/>
        <TextView
            android:id="@+id/online_compare_edit"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            style="@style/MyTextView"
            android:text="编辑"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/online_compare_addll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/compare_add"
        android:layout_below="@+id/compare_title"
        android:gravity="center">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/compare_edit_add"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:text="添加房源"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="(最多对比5套房源)"/>
    </LinearLayout>
    <com.bwf.p_1land.view.RefreshListView
        android:id="@+id/compare_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/online_compare_addll"
        android:layout_above="@+id/compare_star"
        android:divider="@null" />
    <Button
        android:id="@+id/compare_star"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_dark"
        android:textSize="18dp"
        android:text="开始对比"/>
    <LinearLayout
        android:id="@+id/compare_floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">
        <Button
            android:id="@+id/compare_clear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:textColor="@color/calendar_day"
            android:background="@color/compare_add"
            android:textSize="18dp"
            android:text="清空"/>
        <Button
            android:id="@+id/compare_delete"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark"
            android:textSize="18dp"
            android:text="删除"/>
    </LinearLayout>
</RelativeLayout>