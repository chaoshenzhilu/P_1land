<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <ImageView
        android:id="@+id/onehand_itemiv"
        android:layout_width="match_parent"
        android:layout_height="195dip"
        android:scaleType="fitXY"
        android:src="@mipmap/defult_onepic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/onehand_itemiv"
        android:gravity="center_vertical"
        android:background="@android:color/black"
        android:alpha="0.5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/onehand_itemtv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="名字"/>
            <TextView
                android:id="@+id/onehand_itemtv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/onehand_itemtv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="类型、面积"/>
    </LinearLayout>
    <TextView
        android:id="@+id/onehand_itemtv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/onehand_itemiv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:text="价格"/>
</RelativeLayout>